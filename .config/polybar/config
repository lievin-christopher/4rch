;format-disconnected-underline = ${self.format-connected-underline}

label-connected = %{A:urxvt -T "__wifi_menu__" -e sudo wifi-menu:} %{F#02c9ff}%downspeed%%{F-} %{F#9285FF}%upspeed%%{F-}%{A}
label-connected-foreground = ${colors.color7}
label-disconnected = %{A:urxvt -T "__wifi_menu__" -e sudo wifi-menu:}Ô™©%{A}
label-disconnected-foreground = ${colors.color1}
