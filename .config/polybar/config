[module/weather]
type = custom/script
interval = 5
exec = python3 ~/.config/polybar/weather.py 2> /dev/null
tail = true

[module/openvpn]
type = custom/script
interval = 5
exec = ~/.config/polybar/vpn_status.sh
tail = true